root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h,cpp}]
indent_style = tab
indent_size = 8
max_line_length = 80

[{meson.build,meson_options.txt}]
indent_style = space
indent_size = 2
